<div class="page-header">
  <div class="btn-toolbar pull-right">
    <%= link to: topic_path(@conn, :new), class: "btn btn-default" do %>
      New Topic
    <% end %>
  </div>
  <h2>Topics</h2>
</div>

<ul class="list-group">
  <%= for topic <- @topics do %>
    <li class="list-group-item">
      <%= topic.title %>

      <div class="btn-group">
        <%= link "Delete", to: topic_path(@conn, :destroy, topic), method: :delete %>
      </div>
    </li>
  <% end %>
</ul>
